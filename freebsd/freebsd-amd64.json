{
    "variables": {
        "vm_name": "freebsd-amd64",
        "iso_url": "https://download.freebsd.org/ftp/snapshots/amd64/amd64/ISO-IMAGES/11.2/FreeBSD-11.2-STABLE-amd64-20181126-r340982-disc1.iso",
        "iso_checksum_type": "sha512",
        "iso_checksum_url": "https://download.freebsd.org/ftp/snapshots/amd64/amd64/ISO-IMAGES/11.2/CHECKSUM.SHA512-FreeBSD-11.2-STABLE-amd64-20181126-r340982",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_wait_timeout": "1800s",
        "disk_size_MB": "8000",
        "ram_MiB": "1024",
        "shutdown_command": "sudo halt -p"
    },
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -ES sh '{{.Path}}'",
            "scripts": [
                "ssh-configure-vagrant-key.freebsd.sh",
                "cleanup.freebsd.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "{{ user `vm_name` }}-{{.Provider}}.box",
            "compression_level": "9",
            "vagrantfile_template": "Vagrantfile"
        }
    ],
    "builders": [
        {
            "vm_name": "{{ user `vm_name` }}",
            "type": "virtualbox-iso",
            "guest_os_type": "FreeBSD_64",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "iso_checksum_url": "{{ user `iso_checksum_url` }}",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_password": "{{ user `ssh_password` }}",
            "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
            "disk_size": "{{ user `disk_size_MB` }}",
            "guest_additions_mode": "disable",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "{{ user `ram_MiB` }}"]
            ],
            "http_directory": "http",
            "boot_command": [
                "s<enter><wait10><wait10>",
                "<enter><wait>",
                "mdmfs -s 100m md1 /tmp<enter><wait>",
                "dhclient -p /tmp/dhclient.pid -l /tmp/dhclient.lease em0<enter><wait5>",
                "fetch -o /tmp/p http://{{ .HTTPIP }}:{{ .HTTPPort }}/p<enter><wait5>",
                "bsdinstall script /tmp/p<enter>",
                "<wait10><wait10><wait10><wait10><wait10><wait10>",
                "reboot<enter>"
            ],
            "shutdown_command": "{{ user `shutdown_command` }}"
        }
    ]
}
